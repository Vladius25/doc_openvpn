cd /pki

#Запрос на получение сертификата для первого клиента
./easyrsa gen-req $1

#Подпись сертификата
./easyrsa sign-req client $1

#Cоздание ovpn файла
echo "client
dev tun
proto udp
remote 80.211.104.94 1194
resolv-retry infinite
nobind
persist-key
persist-tun
auth SHA256
cipher AES-256-CBC
key-direction 1
verb 3
mute 20"
echo ''

#Cертификат УЦ (CA)
echo "<ca>"
openssl x509 -in /pki/pki/ca.crt -clrext
echo "</ca>"
echo ''

#Cертификат клиента
echo "<cert>"
openssl x509 -in /pki/pki/issued/$1.crt -clrext
echo "</cert>"
echo ''

#Приватный ключ клиента
echo "<key>"
cat /pki/pki/private/$1.key
echo "</key>"
echo ''
 
#Статический ключ TLS
echo "<tls-auth>"
cat /pki/ta.key
echo "</tls-auth>"
